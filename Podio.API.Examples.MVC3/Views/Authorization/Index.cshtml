@model Podio.API.Examples.MVC3.Models.ClientAppInfo
@{
    ViewBag.Title = "Index";
}
<div class="page-header">
    <h1>Create an API Key in Podio <small>and copy the details in here</small></h1>
</div>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div class="well">
    <p>Happens here: <a href="https://podio.com/settings/api">https://podio.com/settings/api</a></p>

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        @Html.LabelFor(model => model.ClientId, "Client id")
        @Html.TextBoxFor(model => model.ClientId, new { @class = "span4" })
        @Html.ValidationMessageFor(model => model.ClientId)
        @Html.LabelFor(model => model.ClientSecret, "Client secret")
        @Html.TextBoxFor(model => model.ClientSecret, new { @class = "span4" })
        @Html.ValidationMessageFor(model => model.ClientSecret)
        @Html.LabelFor(model => model.Domain, "Domain - include http://")
        @Html.TextBoxFor(model => model.Domain, new { @class = "span4" })
        @Html.ValidationMessageFor(model => model.Domain)
        <p>
            <button type="submit" class="btn btn-primary">Create</button>
        </p>
    }
</div>


@Html.Partial("AuthInfoSection",new Podio.API.Examples.MVC3.Models.PodioConnectionInfo())
