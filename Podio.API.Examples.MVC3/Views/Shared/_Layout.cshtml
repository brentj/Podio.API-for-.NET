@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/themes/base/jquery-ui.css")" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/bootstrap.min.css")" />

    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/bootstrap-responsive.min.css")" />

    <script src="@Url.Content("~/Scripts/jquery-1.8.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.20.min.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/Scripts/bootstrap.min.js")" type="text/javascript"></script>
</head>
<body>


    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container-fluid page-container">
                <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <ul class="nav">
                    <li><a href="@Url.Action("index", "home")"><i class="icon-heart"></i>&nbsp;<strong>Home</strong></a></li>
                </ul>
                <div class="nav-collapse collapse">
                    <ul class="nav">
                        <li><a href="@Url.Action("index", "authorization")"><i class="icon-retweet"></i>&nbsp;Authorization & Authentication</a></li>
                    </ul>
                    <ul class="nav pull-right">
                        <li><a href="http://podio.kasperb.dk"> <span class="badge badge-success">Example website for the Podio API .NET Wrapper</span></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    @if (TempData["error"] != null) {
        <div class="container-fluid page-container">
            <div class="alert alert-error alert-block" >
                <button type="button" class="close" data-dismiss="alert">×</button>
                    <h4>An error occured!</h4> @TempData["error"]
            </div>
    </div>
    }

    <div class="container-fluid page-container" id="site">
        @RenderBody()
    </div>

    <hr />

    <footer>
        <div class="container-fluid page-container">
            Get updated/in touch: <a href="http://twitter.com/kasperb">@("@kasperb")</a>
        </div>
    </footer>
    @* Include javascript from child nodes *@
    @RenderSection("javascriptFiles", false)
    @* Execute javascript from child nodes *@
    @RenderSection("javascript", false)
</body>
</html>

